root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
tab_width = 4
indent_style = space
trim_trailing_whitespace = true

[*.xml]
indent_size = 4
indent_style = tab

[*.yml]
indent_size = 2

[*.java]
ij_java_wrap_long_lines = false

[*.{md,mkd,markdown}]
indent_size = 4
trim_trailing_whitespace = false
ij_markdown_wrap_text_if_long = false
